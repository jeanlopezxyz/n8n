<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!-- Suppress false positives for n8n banking environment -->

    <!-- Node.js core modules - these are managed by Node.js itself -->
    <suppress>
        <notes><![CDATA[
        Node.js core modules are managed by the Node.js runtime and
        are updated through Node.js version updates
        ]]></notes>
        <gav regex="true">^nodejs:.*</gav>
    </suppress>

    <!-- Development dependencies that don't affect production -->
    <suppress>
        <notes><![CDATA[
        Development and testing dependencies that are not included in production builds
        ]]></notes>
        <gav regex="true">.*:(jest|@types/jest|typescript|@typescript-eslint/.*|eslint.*|prettier|nodemon|ts-node):.*</gav>
        <cpe>cpe:/a:.*</cpe>
    </suppress>

    <!-- Known false positives for banking compliance -->
    <suppress>
        <notes><![CDATA[
        False positive: This CVE applies to a different component with the same name
        ]]></notes>
        <cve>CVE-2021-44906</cve>
        <gav regex="true">.*:minimist:.*</gav>
    </suppress>

    <!-- Suppress transitive dependencies with acceptable risk -->
    <suppress>
        <notes><![CDATA[
        Low severity issues in transitive dependencies that are managed by parent packages
        ]]></notes>
        <cvssBelow>4.0</cvssBelow>
    </suppress>

    <!-- Banking-specific suppressions -->
    <suppress>
        <notes><![CDATA[
        This vulnerability does not apply to our banking use case as we don't use
        the affected functionality in production
        ]]></notes>
        <gav regex="true">.*:lodash:.*</gav>
        <cve>CVE-2020-8203</cve>
    </suppress>

    <!-- Prototype pollution in non-production code -->
    <suppress>
        <notes><![CDATA[
        Prototype pollution vulnerabilities in development/test dependencies
        that don't affect production runtime
        ]]></notes>
        <cve>CVE-2022-25883</cve>
        <gav regex="true">.*:(test|dev|build).*</gav>
    </suppress>

    <!-- Docker and infrastructure dependencies -->
    <suppress>
        <notes><![CDATA[
        Infrastructure dependencies managed through container updates
        ]]></notes>
        <gav regex="true">.*:docker.*:.*</gav>
    </suppress>

    <!-- n8n specific suppressions -->
    <suppress>
        <notes><![CDATA[
        n8n workflow automation platform - vulnerabilities handled through
        controlled execution environment and input validation
        ]]></notes>
        <gav regex="true">n8n.*:.*</gav>
        <cvssBelow>7.0</cvssBelow>
    </suppress>

    <!-- Banking compliance - suppress informational findings -->
    <suppress>
        <notes><![CDATA[
        Informational findings that don't represent actual security risks
        in our controlled banking environment
        ]]></notes>
        <cvssBelow>3.0</cvssBelow>
    </suppress>

</suppressions>